<!-- Modal ADD -->
<div class="modal fade" id="addApp" tabindex="-1" role="dialog" aria-labelledby="addModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalTitle">Add/Update Kelas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
            </div>
            <form id="formAddGroup" method="POST" action="/panels/kelas/input">
                <div class="modal-body">
                    <div class="form-group" style="display:none">
                        <input type="hidden" name="kelas_id" id="kelas_id" />
                    </div>
                    <div class="form-group">
						<label for="id_vihara">Vihara</label>
						<select id="id_vihara" name="id_vihara" class="form-control">
                            <option value="" disabled>Pilih</option>
							    <% for(var i=0;i < apps.length;i++) { %>
                                <option value="<%= apps[i].id %>"><%= apps[i].name %></option>
                                <% } %>
						</select>
					</div>
                    <div class="form-group">
                        <label for="title">Name</label>
                        <input type="text" id="nama_kelas" class="form-control" name="nama_kelas" placeholder="Nama Kelas" required />
                    </div>
                    <div class="form-group">
                        <label for="title">Keterangan</label>
                        <textarea id="keterangan" class="form-control" name="keterangan" placeholder="Keterangan Tambahan" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="title">Tanggal Mulai</label>
                        <input type="text" id="tanggal_kelas" class="form-control" name="tanggal_kelas" required />
                    </div>
                    <div class="form-group">
                        <label for="title">Tanggal Selesai</label>
                        <input type="text" id="tanggal_selesai" class="form-control" name="tanggal_selesai" required />
                    </div>
                    <div class="row">
                        <div class="col-6">
                        <label for="sidang"><b>Sidang Dharma? : </b></label>&nbsp;
                        <label class="switch">
                            <input id="sidang" name="sidang" type="checkbox">
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="buttonAddApp" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>